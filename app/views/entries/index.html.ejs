<div class="hero-unit">
  <h2>All Entries</h2>
  <%- linkTo('Create a new Entry', addEntryPath, {class: 'btn pull-right'}); %>
</div>

<div id="entries-list">
<% if (entries) { %>
<% for (var i = 0, ii = entries.length; i < ii; i++) { %>
  <div class="row list-item" id="entry-<%= entries[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(entries[i].id, entryPath(entries[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= entries[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>