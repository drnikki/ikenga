<div class="hero-unit">
  <h2>All Stories</h2>
  <%- linkTo('Create a new Story', addStoryPath, {class: 'btn pull-right'}); %>
</div>

<div id="stories-list">
<% if (stories) { %>
<% for (var i = 0, ii = stories.length; i < ii; i++) { %>
  <div class="row list-item" id="story-<%= stories[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(stories[i].pivotalId, storyPath(stories[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= stories[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>